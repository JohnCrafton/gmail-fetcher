# Example .env for typical user (UID 1000)
# Quick setup: cp .env.user-example .env

# =============================================================================
# USER PERMISSIONS - Set to YOUR user
# =============================================================================
# Files will be owned by this UID/GID (no sudo needed to access!)
PUID=1000
PGID=1000

# =============================================================================
# GMAIL QUERY
# =============================================================================
# What to download (exclude spam and trash by default)
# Use "in:anywhere" to include everything
GMAIL_QUERY=-in:spam -in:trash

# Limit (0 = unlimited)
MAX_RESULTS=0

# =============================================================================
# DOWNLOAD OPTIONS
# =============================================================================
INCLUDE_ATTACHMENTS=true
DELETE_AFTER_DOWNLOAD=false

# =============================================================================
# RATE LIMITING
# =============================================================================
# Default: 10 req/sec (conservative, won't hit limits)
# Can increase to 25-50 for faster downloads
REQUESTS_PER_SECOND=10
MAX_RETRIES=5

# =============================================================================
# ARCHIVE OPTIONS
# =============================================================================
ARCHIVE_ENABLED=false
# Set password in secrets/archive_password.txt if enabled

# =============================================================================
# PATHS (usually don't need to change these)
# =============================================================================
DATA_DIR=/data
CREDENTIALS_PATH=/run/secrets/gmail_credentials
ARCHIVE_PASSWORD_FILE=/run/secrets/archive_password
